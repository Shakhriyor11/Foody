<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginVertical="4dp">

    <View
        android:id="@+id/view_of_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/placeholderColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_of_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/placeholderColor"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_of_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_of_description"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/placeholderColor"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/view_of_title"
        app:layout_constraintStart_toStartOf="@id/view_of_title"
        app:layout_constraintEnd_toEndOf="@id/view_of_title"/>

    <View
        android:id="@+id/view_of_heart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/placeholderColor"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/view_of_description"
        app:layout_constraintStart_toStartOf="@id/view_of_description"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_of_clock"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/placeholderColor"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/view_of_heart"
        app:layout_constraintStart_toEndOf="@id/view_of_heart"/>

    <View
        android:id="@+id/view_of_leaf"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/placeholderColor"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/view_of_clock"
        app:layout_constraintStart_toEndOf="@id/view_of_clock"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>